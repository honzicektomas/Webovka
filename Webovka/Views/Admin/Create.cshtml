@model Webovka.Models.Product
@{
    ViewData["Title"] = "Přidat produkt";
}

<div class="container" style="padding-top: 50px; padding-bottom: 50px;">
    <div class="admin-form-container">
        <h2>Nový produkt</h2>

        <form asp-action="Create" method="post" enctype="multipart/form-data">

            <div class="form-group">
                <label class="form-label">Název produktu</label>
                <input asp-for="Name" class="form-input" required>
            </div>

            <div class="form-group">
                <label class="form-label">Popis</label>
                <textarea asp-for="Description" class="form-input" rows="4"></textarea>
            </div>

            <div class="form-row">
                <div class="form-half form-group">
                    <label class="form-label">Cena (Kč)</label>
                    <input asp-for="Price" type="number" step="1" class="form-input" required>
                </div>
                <div class="form-half form-group">
                    <label class="form-label">Stará cena (volitelné)</label>
                    <input asp-for="OldPrice" type="number" step="1" class="form-input">
                </div>
            </div>

            <div class="form-group">
                <label class="form-label">Kategorie</label>
                <select asp-for="CategoryId" class="form-input">
                    @foreach (var cat in ViewBag.Categories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </select>
            </div>

            <div class="form-group">
                <label class="form-label">Obrázek</label>
                <input type="file" name="imageFile" required>
            </div>

            <div class="admin-form-actions">
                <button type="submit" class="btn-red">ULOŽIT PRODUKT</button>
                <a asp-action="Index" class="action-link">Zrušit</a>
            </div>
        </form>
    </div>
</div>