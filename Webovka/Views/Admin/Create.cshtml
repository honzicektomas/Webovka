@model Webovka.Models.Product
@{
    ViewData["Title"] = "Nový produkt";
}

<div class="container" style="padding-top: 50px; padding-bottom: 50px;">
    <h1>Nový produkt</h1>

    <form asp-action="Create" method="post" enctype="multipart/form-data" style="max-width: 800px; margin-top: 30px; background: #fff; padding: 30px; border: 1px solid #eee; border-radius: 8px;">

        <h3 style="border-bottom: 2px solid #eee; padding-bottom: 10px; margin-bottom: 20px;">Informace</h3>

        <div style="margin-bottom: 15px;">
            <label class="form-label">Název produktu</label>
            <input asp-for="Name" class="form-input" required placeholder="Např. Dětské tenisky">
        </div>

        <div style="display: flex; gap: 20px; margin-bottom: 15px;">
            <div style="flex: 1;">
                <label class="form-label">Cena (Kč)</label>
                <input asp-for="Price" type="number" class="form-input" required>
            </div>
            <div style="flex: 1;">
                <label class="form-label">Stará cena (Kč) - volitelné</label>
                <input asp-for="OldPrice" type="number" class="form-input" placeholder="Např. 1500">
            </div>
        </div>

        <div style="margin-bottom: 15px;">
            <label class="form-label">Kategorie</label>
            <select asp-for="CategoryId" class="form-input">
                @if (ViewBag.Categories != null)
                {
                    foreach (var c in ViewBag.Categories)
                    {
                        <option value="@c.Id">@c.Name</option>
                    }
                }
            </select>
        </div>

        <div style="margin-bottom: 15px;">
            <label class="form-label">Popis</label>
            <textarea asp-for="Description" class="form-input" style="height: 100px;"></textarea>
        </div>

        <h3 style="border-bottom: 2px solid #eee; padding-bottom: 10px; margin: 30px 0 20px 0;">První varianta</h3>
        <div style="display: flex; gap: 15px; background: #f9f9f9; padding: 15px; border-radius: 8px;">
            <div style="flex: 1;">
                <label class="form-label">Barva (Název)</label>
                <input type="text" name="defaultColor" class="form-input" required placeholder="Modrá">
            </div>
            <div style="width: 60px;">
                <label class="form-label">Odstín</label>
                <input type="color" name="defaultColorHex" value="#000000" style="width: 100%; height: 42px; padding: 0; cursor: pointer;">
            </div>
            <div style="flex: 1;">
                <label class="form-label">Velikost</label>
                <input type="text" name="defaultSize" class="form-input" required placeholder="38">
            </div>
            <div style="width: 80px;">
                <label class="form-label">Skladem</label>
                <input type="number" name="defaultStock" class="form-input" value="10" required>
            </div>
        </div>

        <h3 style="border-bottom: 2px solid #eee; padding-bottom: 10px; margin: 30px 0 20px 0;">Obrázky</h3>

        <div style="display: flex; gap: 20px;">
            <div style="flex: 1; background: #fdfdfd; border: 2px dashed #ddd; padding: 15px; text-align: center; border-radius: 8px;">
                <label style="font-weight:bold; display:block; margin-bottom:10px; color:#d93025;">Hlavní foto (1 ks)</label>
                <input type="file" name="mainImage" accept="image/*" class="form-control" required>
            </div>

            <div style="flex: 1; background: #fdfdfd; border: 2px dashed #ddd; padding: 15px; text-align: center; border-radius: 8px;">
                <label style="font-weight:bold; display:block; margin-bottom:10px; color:#3498db;">Galerie (více foto)</label>

                <input type="file" name="galleryImages" accept="image/*" multiple class="form-control">

                <small style="color:#777; display:block; margin-top:5px;">Podržte CTRL a vyberte více souborů</small>
            </div>
        </div>

        <div style="margin-top: 30px; text-align: right;">
            <a asp-action="Products" class="btn-red" style="background:#95a5a6; margin-right:10px;">Zrušit</a>
            <button type="submit" class="btn-red">VYTVOŘIT PRODUKT</button>
        </div>
    </form>
</div>