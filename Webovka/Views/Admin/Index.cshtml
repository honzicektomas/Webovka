@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container" style="padding-top: 50px; padding-bottom: 80px;">
    <h1>Vítejte v administraci</h1>
    <p>Vyberte sekci, kterou chcete spravovat.</p>

    <div class="admin-dashboard-grid">
        <a asp-action="Orders" class="admin-tile">
            <img src="~/images/materialy/img/kosik.png" width="60" alt="Objednávky">
            <h3>Objednávky</h3>
            <p>Přehled přijatých objednávek</p>
        </a>

        <a asp-action="Products" class="admin-tile">
            <img src="~/images/materialy/img/loupe.png" width="60" alt="Produkty">
            <h3>Produkty</h3>
            <p>Přidat, upravit nebo smazat produkty a varianty</p>
        </a>

        <a asp-action="Categories" class="admin-tile">
            <img src="~/images/materialy/img/03-01.png" width="60" alt="Kategorie">
            <h3>Kategorie</h3>
            <p>Správa stromové struktury</p>
        </a>
    </div>

    <div style="margin-top: 40px; text-align: center;">
        <a asp-controller="Home" asp-action="Index" class="btn-red">Zpět na E-shop</a>
    </div>
</div>