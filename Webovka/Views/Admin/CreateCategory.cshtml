@model Webovka.Models.Category
@{
    ViewData["Title"] = "Nová kategorie";
}

<div class="container" style="padding-top: 50px;">
    <div class="admin-form-container">
        <h2>Přidat kategorii</h2>
        <form asp-action="CreateCategory" method="post">
            <div class="form-group">
                <label class="form-label">Název kategorie</label>
                <input asp-for="Name" class="form-input" required>
            </div>

            <div class="form-group">
                <label class="form-label">Nadřazená kategorie (volitelné)</label>
                <select asp-for="ParentCategoryId" class="form-input">
                    <option value="">-- Žádná (Hlavní kategorie) --</option>
                    @foreach (var cat in ViewBag.AllCategories)
                    {
                        <option value="@cat.Id">@cat.Name</option>
                    }
                </select>
            </div>

            <div class="admin-form-actions">
                <button type="submit" class="btn-red">ULOŽIT</button>
                <a asp-action="Categories" class="action-link">Zrušit</a>
            </div>
        </form>
    </div>
</div>