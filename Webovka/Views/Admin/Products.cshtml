@model List<Webovka.Models.Product>
@{
    ViewData["Title"] = "Produkty";
}

<div class="container" style="padding-top: 50px; padding-bottom: 50px;">

    <div class="admin-header" style="display: flex; justify-content: space-between; align-items: center; margin-bottom: 30px;">
        <div>
            <h1 style="margin: 0;">Seznam Produktů</h1>
            <p style="color:#777; margin: 5px 0 0 0;">Správa zboží a variant</p>
        </div>
        <div>
            <a asp-action="Create" class="btn-red" style="margin-right: 10px; text-decoration:none;">+ Nový produkt</a>
            <a asp-action="Index" class="btn-red" style="background-color: #7f8c8d; text-decoration:none;">← Zpět na Dashboard</a>
        </div>
    </div>

    <table class="admin-table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Název</th>
                <th>Cena</th>
                <th>Kategorie</th>
                <th class="text-right">Akce</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td>
                        <img src="@item.MainImageUrl" width="40" style="vertical-align:middle; margin-right:10px; border-radius:4px;">
                        <strong>@item.Name</strong>
                    </td>
                    <td>@item.Price Kč</td>
                    <td>@(item.Category?.Name ?? "Nezařazeno")</td>
                    <td class="text-right">
                        <a asp-action="ProductVariants" asp-route-id="@item.Id" class="btn-red" style="padding: 5px 10px; font-size: 0.8rem; margin-right: 5px; text-decoration:none;">Varianty</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" onclick="return confirm('Smazat produkt?')" style="color: #d93025; font-weight: bold; text-decoration: none;">✕ Smazat</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>