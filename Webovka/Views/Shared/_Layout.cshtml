<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webovka</title>

    <link rel="stylesheet" href="~/css/HOME_style.css">
    <link rel="stylesheet" href="~/css/PRODUCT_style.css">
    <link rel="stylesheet" href="~/css/CART_style.css">
    <link rel="stylesheet" href="~/css/LOGIN_style.css">
    <link rel="stylesheet" href="~/css/ADMIN_style.css">
</head>
<body>
    <header>
        <div class="top-bar">
            <div class="container">
                <div class="contact-left">
                    <a href="#">
                        <img src="~/images/materialy/img/8.png" class="icon-inline" alt="Telefon">
                        <span>+420 777 666 555</span>
                    </a>
                    <span class="divider">|</span>
                    <a href="#">
                        <span>info@nejlepsiboty.cz</span>
                    </a>
                </div>
                <div class="login-right">
                    @if (ViewBag.IsAuthenticated == true)
                    {
                        <span style="margin-right: 15px; font-weight: bold; color: #2c3e50;">
                            @ViewBag.CurrentUserName
                        </span>

                        @if (ViewBag.CurrentUserRole == "Admin")
                        {
                            <a asp-controller="Admin" asp-action="Index" style="color: red; margin-right: 10px; font-weight: bold;">
                                ADMIN
                            </a>
                        }

                        <a asp-controller="User" asp-action="Logout">
                            <span style="text-decoration: underline;">Odhlásit</span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="Index">
                            <img src="~/images/materialy/img/profile-user.png" class="icon-inline" alt="Login">
                            <span>Přihlásit</span>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="header-main">
            <div class="container header-wrapper">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/images/materialy/img/Group 4.png" alt="Boty Logo" width="120">
                    </a>
                </div>
                <div class="header-right-group">
                    <form class="search-bar" action="#">
                        <button type="submit">
                            <img src="~/images/materialy/img/loupe.png" alt="Hledat">
                        </button>
                        <input type="text" placeholder="Vyhledat zboží...">
                    </form>
                    <div class="header-icons">
                        <a asp-controller="Cart" asp-action="Index">
                            <img src="~/images/materialy/img/kosik.png" width="24" alt="Košík">
                        </a>
                        <a href="#">
                            <img src="~/images/materialy/img/heart.png" width="24" alt="Oblíbené">
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer-wrapper">
        <div class="container footer-container">
            <div class="footer-left">
                <div class="footer-block">
                    <h3>O NÁS</h3>
                    <p class="about-text">Lorem ipsum dolor sit amet.</p>
                    <div style="margin-top:20px;"><img src="~/images/materialy/img/Group 4.png" width="100"></div>
                </div>
                <div class="footer-block" style="flex:1.5; padding-left:40px;">
                    <h3>NAŠE NABÍDKA</h3>
                    <div class="footer-lists">
                        <ul>
                            <li class="list-head">Dívčí</li>
                            <li><a href="#">Tenisky</a></li>
                        </ul>
                        <ul>
                            <li class="list-head">Chlapecké</li>
                            <li><a href="#">Tenisky</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="footer-right">
                <h3>KONTAKT</h3>
                <div class="contact-row">info@nejlepsiboty.cz</div>
            </div>
        </div>
    </footer>
</body>
</html>