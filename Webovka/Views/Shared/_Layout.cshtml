<!DOCTYPE html>
<html lang="cs">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Webovka</title>

    <link rel="stylesheet" href="~/css/HOME_style.css">
    <link rel="stylesheet" href="~/css/PRODUCT_style.css">
    <link rel="stylesheet" href="~/css/CART_style.css">
    <link rel="stylesheet" href="~/css/LOGIN_style.css">
    <link rel="stylesheet" href="~/css/ADMIN_style.css">
</head>
<body>

    <header>
        <div class="top-bar">
            <div class="container">
                <div class="contact-left">
                    <a href="#">
                        <img src="~/images/materialy/img/8.png" class="icon-inline" alt="Telefon">
                        <span>+420 777 666 555</span>
                    </a>
                    <span class="divider">|</span>
                    <a href="#">
                        <span>info@nejlepsiboty.cz</span>
                    </a>
                </div>

                <div class="login-right">
                    @if (ViewBag.IsAuthenticated == true)
                    {
                        <span style="margin-right: 15px; font-weight: bold; color: #2c3e50;">
                            @ViewBag.CurrentUserName
                        </span>

                        @if (ViewBag.CurrentUserRole == "Admin")
                        {
                            <a asp-controller="Admin" asp-action="Index" style="color: red; margin-right: 10px; font-weight: bold;">ADMIN</a>
                        }

                        <a asp-controller="User" asp-action="Logout" style="text-decoration: underline;">Odhlásit</a>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="Index">
                            <img src="~/images/materialy/img/profile-user.png" class="icon-inline" alt="Login">
                            <span>Přihlásit / Registrovat</span>
                        </a>
                    }
                </div>
            </div>
        </div>

        <div class="header-main">
            <div class="container header-wrapper">
                <div class="logo">
                    <a asp-controller="Home" asp-action="Index">
                        <img src="~/images/materialy/img/Group 4.png" alt="Boty Logo" width="120">
                    </a>
                </div>
                <div class="header-right-group">
                    <form class="search-bar" action="#">
                        <button type="submit">
                            <img src="~/images/materialy/img/loupe.png" alt="Hledat">
                        </button>
                        <input type="text" placeholder="Vyhledat zboží...">
                    </form>

                    <div class="header-icons">
                        <a asp-controller="Cart" asp-action="Index">
                            <img src="~/images/materialy/img/kosik.png" width="24" alt="Košík">
                        </a>
                        <a href="#">
                            <img src="~/images/materialy/img/heart.png" width="24" alt="Oblíbené">
                        </a>
                    </div>
                </div>
            </div>
        </div>

        <nav class="main-nav">
            <div class="container">
                <ul class="nav-menu">
                    <li>
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="1" class="nav-link">
                            Chlapecké
                            <img src="~/images/materialy/img/Group 169.png" class="nav-icon-img" alt="Boy">
                        </a>
                    </li>
                    <li>
                        <a asp-controller="Product" asp-action="Index" asp-route-categoryId="2" class="nav-link">
                            Dívčí
                            <img src="~/images/materialy/img/Group 171.png" class="nav-icon-img" alt="Girl">
                        </a>
                    </li>
                    <li><a asp-controller="Product" asp-action="Index" class="nav-link">Doplňky</a></li>
                    <li><a asp-controller="Product" asp-action="Index" class="nav-link">Všechny produkty</a></li>
                    <li><a href="#" class="nav-link">Kontakt</a></li>
                </ul>
            </div>
        </nav>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="footer-wrapper">
        <div class="container footer-container">
            <div class="footer-left">
                <div class="footer-block">
                    <h3>O NÁS</h3>
                    <p class="about-text">Lorem ipsum dolor sit amet, consectetuer adipiscing elit.</p>
                    <div style="margin-top:20px;"><img src="~/images/materialy/img/Group 4.png" width="100"></div>
                </div>
            </div>
            <div class="footer-right">
                <h3>KONTAKTUJTE NÁS</h3>
                <div class="contact-row">
                    <img src="~/images/materialy/img/6.png" class="footer-icon-img"> info@nejlepsiboty.cz
                </div>
                <div class="contact-row">
                    <img src="~/images/materialy/img/8.png" class="footer-icon-img"> +420 777 666 555
                </div>
                <div class="address">Litvínovská 600, Praha 9</div>
            </div>
        </div>
    </footer>
</body>
</html>