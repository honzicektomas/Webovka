@model Webovka.Models.Product
@{
    ViewData["Title"] = Model.Name;
    var related = ViewBag.RelatedProducts as List<Webovka.Models.Product>;
}

<section class="products" style="padding-top: 50px;">
    <div class="container">
        <div style="display: flex; flex-wrap: wrap; gap: 40px;">

            <div style="flex: 1; min-width: 300px;">
                <img src="@Model.MainImageUrl" alt="@Model.Name" style="width: 100%; border-radius: 8px; border: 1px solid #eee;">
            </div>

            <div style="flex: 1; min-width: 300px;">
                <h4 style="color: #999; text-transform: uppercase;">
                    @(Model.Category?.Name ?? "Kategorie")
                </h4>
                <h1 style="margin: 10px 0 20px 0;">@Model.Name</h1>

                <div style="margin-bottom: 20px;">
                    <span style="font-size: 2rem; color: #d93025; font-weight: bold;">@Model.Price Kč</span>
                    @if (Model.OldPrice != null)
                    {
                        <span style="text-decoration: line-through; color: #999; margin-left: 10px;">@Model.OldPrice Kč</span>
                    }
                </div>

                <p style="line-height: 1.6; color: #555; margin-bottom: 30px;">
                    @(Model.Description ?? "Popis produktu zatím není k dispozici.")
                </p>

                <form asp-controller="Cart" asp-action="AddToCart" method="post" style="background: #f9f9f9; padding: 20px; border-radius: 8px;">

                    <div style="margin-bottom: 15px;">
                        <label style="font-weight: bold; display: block; margin-bottom: 5px;">Vyberte variantu:</label>
                        <select name="variantId" class="form-control" style="width: 100%; padding: 10px;">
                            @if (Model.Variants != null && Model.Variants.Any())
                            {
                                foreach (var v in Model.Variants)
                                {
                                    if (v.StockQuantity > 0)
                                    {
                                        <option value="@v.Id">Barva: @v.Color | Velikost: @v.Size (Skladem: @v.StockQuantity)</option>
                                    }
                                    else
                                    {
                                        <option disabled>Barva: @v.Color | Velikost: @v.Size (Vyprodáno)</option>
                                    }
                                }
                            }
                            else
                            {
                                <option disabled>Žádné varianty nejsou dostupné</option>
                            }
                        </select>
                    </div>

                    <div style="display: flex; gap: 10px;">
                        <input type="number" name="quantity" value="1" min="1" max="10" style="width: 70px; text-align: center; padding: 10px;">

                        <button type="submit" class="btn-red" style="flex: 1;"
                                @(Model.Variants == null || !Model.Variants.Any() ? "disabled" : "")>
                            Vložit do košíku
                        </button>
                    </div>

                    @if (ViewBag.Authenticated != true)
                    {
                        <p style="margin-top: 10px; font-size: 0.8rem; color: #d93025;">
                            * Pro nákup se musíte přihlásit.
                        </p>
                    }
                </form>
            </div>
        </div>
    </div>
</section>

<section class="products">
    <div class="container">
        <div class="section-separator">
            <div class="separator-line"></div>
            <div class="separator-icon"><img src="~/images/materialy/img/heart.png" width="20"></div>
        </div>

        <h2 class="section-title">Mohlo by se vám <span>líbit</span></h2>

        <div class="product-grid">
            @if (related != null)
            {
                foreach (var item in related)
                {
                    <div class="product-card">
                        <div class="product-img-wrap">
                            <a asp-action="Detail" asp-route-id="@item.Id">
                                <img src="@item.MainImageUrl" alt="@item.Name">
                            </a>
                        </div>
                        <h4>
                            <a asp-action="Detail" asp-route-id="@item.Id" style="color: inherit; text-decoration: none;">
                                @item.Name
                            </a>
                        </h4>
                        <div class="card-bottom">
                            <span class="current-price">@item.Price Kč</span>
                            <a asp-action="Detail" asp-route-id="@item.Id">
                                <img src="~/images/materialy/img/loupe.png" width="20">
                            </a>
                        </div>
                    </div>
                }
            }
        </div>
    </div>
</section>